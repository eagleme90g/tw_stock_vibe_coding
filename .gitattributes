# Normalize text files and control line endings
* text=auto

# LF line endings for source/config/docs
*.py  text eol=lf
*.sh  text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.txt text eol=lf

# CRLF for Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
